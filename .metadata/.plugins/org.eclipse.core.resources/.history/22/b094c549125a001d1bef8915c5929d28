
public class Driver {
public static void main(String[] args) {
	//System.out.println("java");
	
	String firstName = "Bahar";
	System.out.println(firstName.charAt(1));//1. indexteki sayıyı yazdırır.
	System.out.println(firstName.toUpperCase()); //bütün harfleri büyük yazdırır.
	System.out.println(firstName.toLowerCase());//bütün harfleri küçük yazdırır.
	System.out.println(firstName.replace('a', 'e'));// bütün a ları e yapar.
	System.out.println(firstName.length()); //stringin uzunluğunu yazdırır.(boşluklar da dahil)
	System.out.println(firstName.substring(2));//2.indeksinden itibaren yazdırır.
	
}
}
